# aliases
alias ..="cd .."
alias ...="cd ../.."
alias l="ls -alG"
alias ll="ls -alG"
alias ls="ls -G"
alias lp="ls -pG"
alias h=history



export CXXFLAGS="-I/opt/local/include -Wall -ansi -pedantic"
export CPPFLAGS=$CXXFLAGS
export PATH=/opt/local/bin:/opt/local/sbin:$PATH
# Finished adapting your PATH environment variable for use with MacPorts.

